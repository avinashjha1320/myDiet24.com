<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/auth.css" />
  <title>Register | Login</title>
</head>

<body>
  <div class="form-structor">
    <form action="/auth/register" method="POST">
      <div class="signup">
        <h2 class="form-title" id="signup"><span>or</span>Sign up</h2>
        <div class="form-holder">
          <input type="text" class="input" name="name" placeholder="Name" required />
          <input type="text" class="input" name="profession" placeholder="Profession" required />
          <input type="email" class="input" name="email" placeholder="Email" required />
          <input type="password" class="input" name="password" placeholder="Password" required />
          <!-- <input
              type="url"
              class="input"
              name="facebook"
              placeholder="Facebook"
            /> -->
          <input type="url" class="input" name="twitter" placeholder="Twitter profile link" />
          <!-- <input
              type="url"
              class="input"
              name="googlePlus"
              placeholder="Google +"
            /> -->
          <!-- <input
              type="url"
              class="input"
              name="instagram"
              placeholder="Instagram"
            /> -->
          <!-- <input
              type="url"
              class="input"
              name="youtube"
              placeholder="Youtube"
            /> -->
        </div>
        <button type="submit" class="submit-btn">Sign up</button>
      </div>
    </form>
    <form action="/auth/login" method="POST">
      <div class="login slide-up">
        <div class="center">
          <h2 class="form-title" id="login"><span>or</span>Log in</h2>
          <div class="form-holder">
            <input type="email" class="input" name="email" placeholder="Email" required />
            <input type="password" class="input" name="password" placeholder="Password" required />
          </div>
          <button type="submit" class="submit-btn">Log in</button>
        </div>
      </div>
    </form>
  </div>

  <script src="/js/auth.js"></script>
</body>

</html>